generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Team {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  users       User[]
  events      Event[]
  tasks       Task[]
  projects    Project[]
}

model Project {
  id          String    @id @default(uuid())
  name        String
  description String?
  teamId      String    @map("team_id")
  startDate   DateTime? @map("start_date") @db.Date
  endDate     DateTime? @map("end_date") @db.Date
  status      String    @default("active") // active | archived
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  team        Team      @relation(fields: [teamId], references: [id], onDelete: Cascade)
  tasks       Task[]

  @@unique([teamId, name])
}

model User {
  id            String    @id @default(uuid())
  username      String    @unique
  passwordHash  String    @map("password_hash")
  name          String
  email         String?
  avatarUrl     String?   @map("avatar_url")
  teamId        String?   @map("team_id")
  role          String    @default("TEAM_MEMBER") // CEO | TEAM_LEADER | TEAM_MEMBER
  status        String    @default("PENDING")     // PENDING | APPROVED
  isActive      Boolean   @default(true) @map("is_active")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  team          Team?     @relation(fields: [teamId], references: [id], onDelete: SetNull)
  eventsAssigned Event[]  @relation("EventAssignee")
  eventsCreated Event[]  @relation("EventCreatedBy")
  tasks         Task[]
  tasksCreated  Task[]    @relation("TaskCreatedBy")
  announcements Announcement[]
  refreshTokens RefreshToken[]
  taskComments   TaskComment[]
  taskHistories  TaskHistory[]
  attendances    Attendance[]
  leaveRequests  LeaveRequest[]
  leaveApproved  LeaveRequest[] @relation("LeaveApprovedBy")
  notifications   Notification[]
  pushSubscriptions PushSubscription[]
  feedPosts       FeedPost[]
  feedRoomMembers FeedRoomMember[]
  feedPostReactions FeedPostReaction[]
  feedPostReads   FeedPostRead[]
}

model PushSubscription {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  endpoint  String   @unique
  p256dh   String   @map("p256dh")
  auth      String
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  type      String
  title     String
  link      String?
  isRead    Boolean  @default(false) @map("is_read")
  deletedAt DateTime? @map("deleted_at")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Attendance {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  date      DateTime @db.Date
  checkIn   DateTime? @map("check_in")
  checkOut  DateTime? @map("check_out")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LeaveRequest {
  id         String    @id @default(uuid())
  userId     String    @map("user_id")
  startDate  DateTime  @map("start_date") @db.Date
  endDate    DateTime  @map("end_date") @db.Date
  reason     String?
  status     String    @default("pending") // pending | approved | rejected | cancelled
  approvedBy String?   @map("approved_by")
  createdAt  DateTime @default(now()) @map("created_at")
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  approver   User?     @relation("LeaveApprovedBy", fields: [approvedBy], references: [id], onDelete: SetNull)
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String?
  startAt     DateTime @map("start_at")
  endAt       DateTime @map("end_at")
  assigneeId  String   @map("assignee_id")
  teamId      String   @map("team_id")
  status      String   @default("scheduled")
  priority    String   @default("normal")
  recurrence  Json?
  remindAt    DateTime? @map("remind_at")
  category    String?  // Ï†ÑÏ≤¥ Í≥µÏßÄ | ÌåÄ ÏùºÏ†ï | Í∏∞ÌÉÄ
  color       String?  // blue | green | purple | orange | pink | red | slate
  createdBy   String   @map("created_by")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  assignee    User     @relation("EventAssignee", fields: [assigneeId], references: [id], onDelete: Cascade)
  team        Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  creator     User     @relation("EventCreatedBy", fields: [createdBy], references: [id], onDelete: SetNull)
}

model Task {
  id          String    @id @default(uuid())
  title       String
  description String?
  dueDate     DateTime  @map("due_date") @db.Date
  status      String    @default("todo") // todo | in_progress | done | on_hold | cancelled
  priority    String    @default("normal") // low | normal | high
  assigneeId  String    @map("assignee_id")
  teamId      String    @map("team_id")
  projectId   String?   @map("project_id")
  createdBy   String    @map("created_by")
  updatedBy   String?   @map("updated_by")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  assignee    User      @relation(fields: [assigneeId], references: [id], onDelete: Cascade)
  team        Team      @relation(fields: [teamId], references: [id], onDelete: Cascade)
  project     Project?  @relation(fields: [projectId], references: [id], onDelete: SetNull)
  creator     User      @relation("TaskCreatedBy", fields: [createdBy], references: [id], onDelete: SetNull)
  comments    TaskComment[]
  histories   TaskHistory[]
}

model TaskComment {
  id        String   @id @default(uuid())
  taskId    String   @map("task_id")
  userId    String   @map("user_id")
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model TaskHistory {
  id        String   @id @default(uuid())
  taskId    String   @map("task_id")
  userId    String   @map("user_id")
  field     String   // status | assignee | priority
  oldValue  String?
  newValue  String?
  createdAt DateTime @default(now()) @map("created_at")
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Announcement {
  id            String    @id @default(uuid())
  type          String
  title         String
  content       String?
  targetType    String    @map("target_type") @default("all")
  targetTeamId  String?   @map("target_team_id")
  eventDate     DateTime? @map("event_date")
  attachments   Json?
  createdBy     String    @map("created_by")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  creator       User      @relation(fields: [createdBy], references: [id], onDelete: SetNull)
}

model FeedChannel {
  id        String    @id @default(uuid())
  name      String
  slug      String    @unique
  groupName String    @default("Î©îÏù∏") @map("group_name") // Î©îÏù∏, Í∏∞ÌÉÄ Îì±
  sortOrder Int       @default(0) @map("sort_order")
  createdAt DateTime  @default(now()) @map("created_at")
  posts     FeedPost[]
}

model FeedRoom {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  members   FeedRoomMember[]
  posts     FeedPost[]
}

model FeedRoomMember {
  id        String   @id @default(uuid())
  roomId    String   @map("room_id")
  userId    String   @map("user_id")
  joinedAt DateTime @default(now()) @map("joined_at")
  room      FeedRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([roomId, userId])
}

model FeedPost {
  id          String    @id @default(uuid())
  userId      String    @map("user_id")
  channelId   String?   @map("channel_id")
  roomId      String?   @map("room_id")
  content     String
  attachments Json?     // [{ type: "image"|"video", url: string, fileName?: string }]
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  channel     FeedChannel? @relation(fields: [channelId], references: [id], onDelete: Cascade)
  room        FeedRoom? @relation(fields: [roomId], references: [id], onDelete: Cascade)
  reactions   FeedPostReaction[]
  reads       FeedPostRead[]
}

model FeedPostReaction {
  id        String   @id @default(uuid())
  postId    String   @map("post_id")
  userId    String   @map("user_id")
  emoji     String   // üëç, ‚úì, üí¨ Îì±
  createdAt DateTime @default(now()) @map("created_at")
  post      FeedPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([postId, userId, emoji])
}

model FeedPostRead {
  id        String   @id @default(uuid())
  postId    String   @map("post_id")
  userId    String   @map("user_id")
  readAt    DateTime @default(now()) @map("read_at")
  post      FeedPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([postId, userId])
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
